<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".EditorActivity">

        <EditText
            android:id="@+id/edit_product_name"
           android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="PRODUCT_NAME"
            android:inputType="textCapWords" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <EditText
                android:id="@+id/edit_price"
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/prce"
                android:inputType="number" />

            <TextView
                android:id="@+id/label_dollar_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dollar" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/increase_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/plus"

            />

        <EditText
            android:id="@+id/edit_quantity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:paddingRight="65dp"
            android:hint="QUANTITY"/>



            <Button
                android:id="@+id/decrease_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/minus"

                 />


    </LinearLayout>
    <EditText
        android:id="@+id/edit_supplier_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/supplier_name"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/edit_supplier_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/supplier_contact"
        android:inputType="textCapWords" />
    <Button
        android:id="@+id/delete_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE" />

    <Button
        android:id="@+id/contact_supplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Supplier" />
</LinearLayout>
